{
	"name": "saeidmohadjer.com",
	"version": "1.0.0",
	"description": "Website for Saeid Mohadjer",
	"repository": {
		"type": "git",
		"url": "https://github.com/smohadjer/saeidmohadjer.com"
	},
	"license": "MIT",
	"scripts": {
		"precompile": "node node_modules/build/bin/clean.js",
		"compile": "node node_modules/build/bin/compile.js",
		"copy": "node node_modules/build/bin/copy.js",
		"sass": "node node_modules/build/bin/sassTocss",
		"hbs": "node node_modules/build/bin/hbs.js",
		"tsc": "tsc -p .",
		"watch": "node node_modules/build/bin/watch.js",
		"server": "node node_modules/build/bin/server.js",
		"serve": "npm run compile && npm run copy && npm run tsc && npm run sass && npm run hbs && npm run bundle",
		"bundle": "rollup -c",
		"start": "npm run serve && npm run watch & tsc -w & npm run server -- public 5000",
		"build": "npm run serve",
		"start-prod": "npm run build && npm run server -- public 3001"
	},
	"devDependencies": {
		"build": "git://github.com/smohadjer/build.git#semver:^1.0.0"
	},
	"dependencies": {
		"@octokit/rest": "^20.0.1",
		"dotenv": "^16.0.3",
		"hamburgers": "0.9.3",
		"helpers": "git+https://github.com/smohadjer/helpers.git",
		"swiper": "^9.4.1"
	},
	"engines": {
		"node": ">=18.15.0"
	}
}
