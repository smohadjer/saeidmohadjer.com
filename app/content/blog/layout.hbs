<!doctype html>
<html class="no-js" lang="en">
	<head>
    {{> en/partials/meta }}
        <style>
            header {
                border-bottom: solid 1px #999;
                margin-bottom: 2em;
                padding-bottom: 1em;
            }

            header h2 + h3 {
                margin-top: 0;
                font-weight: 500;
            }

            * {
                margin-bottom: 0;
            }

            body {
                font-family: Arial, Helvetica, sans-serif;
                font-size: 1rem;
                max-width: 80ch;
                margin: 1rem;
                line-height: 1.3;
            }

            @media (min-width: 1024px) {
                body {
                    font-size: 1.2rem;
                }
            }

            @media (min-width: 100ch) {
                body {
                    margin-left: auto;
                    margin-right: auto;
                }
            }

            .post {
                border-bottom: solid 1px #999;
                margin-bottom: 3em;
                padding-bottom: 3em;
            }

            .post h1 {
                margin: 0;
            }

            .post .responsive {
                width: 100%;
            }

            .post ul {
                margin-left: 17px;
                padding-left: 0;
            }
	    
	    .post ol {
	        padding-left: 0;
    		list-style: inside decimal;
    	    }
	    
	    .post ol li {
	        text-indent: -1.1em;
                margin-left: 1.1em;
	    }

            .post .tags {
                margin: 5px 0;
            }

            .post .tags span {
                padding: 5px 15px;
                background: #888;
                border-radius: 15px;
                font-size: smaller;
                color: white;
            }

            .post time {
                display: inline-block;
                font-size: smaller;
                font-style: italic;
            }

            .post time::before {
                content: "Published on "
            }

            .post pre {
                background: #f4f4f4;
                border: 1px solid #ddd;
                border-left: 3px solid #f36d33;
                color: #666;
                page-break-inside: avoid;
                font-family: monospace;
                font-size: 15px;
                line-height: 1.6;
                margin-bottom: 1.6em;
                max-width: 100%;
                overflow: auto;
                padding: 1em 1.5em;
                display: block;
                word-wrap: break-word;
            }

        </style>
	</head>
	<body>
        {{> blog/partials/header pageId=this.pageId }}
        {{> content }}
	</body>
</html>
