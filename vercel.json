{
  "rewrites": [
    {
      "source": "/blog/:slug",
      "destination": "/api/blog"
    },
    {
      "source": "/blog/tag/:tag",
      "destination": "/api/blog"
    },
    {
      "source": "/blog",
      "destination": "/api/blog"
    },
    {
      "source": "/api/blog/:post_id",
      "destination": "/api/blog"
    }
  ],
  "cleanUrls": true
}
